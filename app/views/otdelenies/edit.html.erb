<h1>Editing otdeleny</h1>
<%= form_with model: @otdilenie, method: :patch do |form| %>

  <div class="pole">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="pole">
    <%= form.label :doctor_id %>
    <%= form.collection_select :doctor_id, Doctor.all, :id, :name, { prompt: 'Выберите doctor' } %>
  </div>

  <div class="pole">
    <%= form.label :clinic_id %>
    <%= form.collection_select :clinic_id, Clinic.all, :id, :name, { prompt: 'Выберите clinic' } %>
  </div>


  <div class="send">
    <%= form.submit %>
  </div>
<% end %>
<br>

<div>
  <%= link_to "Show this otdeleny", @otdeleny %> |
  <%= link_to "Back to otdelenies", otdelenies_path %>
</div>
