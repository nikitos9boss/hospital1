<h1>Editing doctor</h1>

<%= form_with model: @doctor, method: :patch do |form| %>

  <div class="pole">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="pole1">
    <%= form.label :stag %>
    <%= form.text_field :stag %>
  </div>



  <div class="send">
    <%= form.submit %>
  </div>

<% end %>
<br>

<div>
  <%= link_to "Show this doctor", @doctor %> |
  <%= link_to "Back to doctors", doctors_path %>
</div>
